<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="267.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.unibl.etf.projektnizadatak2024.controllers.NewBookPageController">
    <VBox alignment="CENTER" layoutX="25.0" layoutY="13.0" spacing="10">
        <TextField fx:id="titleField" promptText="Unesite naslov knjige" />
        <TextField fx:id="authorField" promptText="Unesite autora" />
        <TextField fx:id="languageField" promptText="Unesite jezik" />
        <TextField fx:id="publicationDateField" promptText="Unesite datum objavljivanja" />
      <TextField fx:id="sadrzajField" promptText="Unesite url sadrzaja" />
      <TextField fx:id="naslovnaStranaField" promptText="Unesite url naslonvne strane" />
        <Button fx:id="saveButton" onMouseClicked="#onSaveButton" text="Spasi knjigu" />
    </VBox>

</AnchorPane>
